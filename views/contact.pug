extends base.pug
block scripts 
    script(src="../static/index.js")
block styles 
     style
         include ../static/style1.css

block content
    div#contact 
        h1 Contact Us
        div#contact-us
            form(action="/contact" ,method="post",Class="myForm")
                p Name:
                input(type="text", name="name", placeholder="Enter your name", Class="myinput")
                p Phone No:
                input(type="text", name="phone", placeholder="Enter your phone number", Class="myinput")
                p Email id:
                input(type="text", name="email", placeholder="Enter your email id", Class="myinput")
                p Address:
                input(type="text", name="address", placeholder="Enter your address", Class="myinput")
                p consern:
                input(type="text", name="desc," placeholder="Enter your consern", Class="myinput")
                button(Class="btn")
                    | submit      